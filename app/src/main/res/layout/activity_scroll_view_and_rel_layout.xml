<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".Week3CC.ScrollViewAndRelLayoutActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_yellow"
                    android:layout_width="@dimen/dim_70_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:background="@android:color/holo_orange_light"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/textview_white"
                    android:layout_width="@dimen/dim_100_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:background="@android:color/primary_text_light"
                    android:layout_toRightOf="@id/textview_yellow"/>

                <TextView
                    android:id="@+id/textview_green"
                    android:layout_width="@dimen/dim_70_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:layout_toRightOf="@id/textview_white"
                    android:background="@android:color/holo_green_light"/>

                <TextView
                    android:id="@+id/textview_blue"
                    android:layout_width="@dimen/dim_70_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:layout_toRightOf="@id/textview_green"
                    android:background="@android:color/holo_blue_light"/>

                <TextView
                    android:id="@+id/textview_white_2"
                    android:layout_width="@dimen/dim_30_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:background="@android:color/primary_text_light"
                    android:layout_toRightOf="@id/textview_blue"/>
                <TextView
                    android:layout_width="@dimen/dim_50_dp"
                    android:layout_height="@dimen/dim_70_dp"
                    android:background="@android:color/holo_red_light"
                    android:layout_toRightOf="@id/textview_white_2"
                    android:paddingBottom="15dp"/>

            </RelativeLayout>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />
            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />

            <TextView
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scroll_view_info" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>