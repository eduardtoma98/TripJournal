<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageview_trip_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textview_trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imageview_trip_picture"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_trip_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_trip_name"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/imageview_trip_picture" />

        <TextView
            android:id="@+id/textview_trip_price_and_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_trip_destination"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/imageview_trip_picture" />
        <!--ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_bookmark_border"
            android:layout_toRightOf="@+id/textview_trip_name"
            android:drawableLeft="@drawable/ic_bookmark_border" /-->


    </RelativeLayout>
</android.support.v7.widget.CardView>